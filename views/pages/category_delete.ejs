<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") -%>
  </head>
  <body>
    <div class="content">
      <aside class="sidebar"><%- include("../partials/sidebar") -%></aside>
      <main>
        <%- include("../partials/title") -%> <% if(categorys_items.length ){ %>
        <h3>
          Delete the following items before attempting to delete this category.
        </h3>
        <ul class="item-list">
          <% categorys_items.forEach(function(item) { %>
          <li><a href=<%- item.url -%>><%- item.name -%></a></li>
          <% }); %>
        </ul>
        <% } else{ %>
          <h3>Do you really want to delete this category?</h3>
          <form action="" method="post">
            <input id="categoryid" type="hidden" name="categoryid" required value=<%- category._id %>>
            <button type="submit">Delete</button>
          </form>
        <% } %>
      </main>
    </div>
  </body>
</html>
