<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") -%>
  </head>
  <body>
    <div class="content">
      <aside class="sidebar"><%- include("../partials/sidebar") -%></aside>
      <main>
        <%- include("../partials/title") -%>

        <form class="create-form" action="" method="post">
          <label for="name">Item name</label>
          <input type="text" name="name" id="name" placeholder="Name" value="<%-
          !locals.item ? "" : item.name %>" required />

          <label for="description">Item description</label>
          <textarea
            type="text"
            name="description"
            id="description"
            placeholder="Some extra info"
            class="tall"
            rows="5"
          >
<%-  !locals.item ? "" : item.description%></textarea
          >

          <label for="category">Category</label>
          <select id="category" name="category">
            <% for(var i=0; i < categories.length; i++) { %>
            <option <% if(locals.item){ %>
              <% if(item.category.name == categories[i].name){ %> selected <% }
              %> <% } %> value="<%= categories[i].name %>"> <%=
              categories[i].name %>
            </option>
            <% } %>
          </select>

          <label for="price">Price</label>
          <input value="<%- !locals.item ? "" : item.price %>" type="number"
          name="price" id="price" min="1" />

          <label for="number-in-stock">Number in stock</label>
          <input
            type="number"
            value="<%-  !locals.item ? "" : item.number_in_stock %>"


            name="number_in_stock"
            id="number-in-stock"
            min="0"
          />

          <button class="submit" type="submit">Submit</button>
        </form>
      </main>
    </div>
  </body>
</html>
